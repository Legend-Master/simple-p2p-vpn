    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch client",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "target/debug/client.exe",
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "preLaunchTask": "rust: cargo build",
        },
        {
            "name": "(Windows) Launch server",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "target/debug/server.exe",
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "preLaunchTask": "rust: cargo build",
        },
    ]
}